                        </DockPanel>
             
             
            </Grid>

                    <Frame HorizontalAlignment="Stretch" Width="auto" Height="auto" Name="MainFrame" Margin="0,30,0,0" Padding="10,10,10,10" NavigationUIVisibility="Hidden">
                  
                  
                </Frame>
                </Grid>
            </ScrollViewer>
    </Grid>
    </telerik:RadBusyIndicator>
</Window>
